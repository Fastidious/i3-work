set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, if you need a lot of unicode glyphs or
# right-to-left text rendering, you should instead use pango for rendering and
# chose a FreeType font, such as:
# font pango:DejaVu Sans Mono 10

# wallpaper solid color:
exec --no-startup-id xsetroot -solid "#333333"

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+shift+Return exec i3-sensible-terminal -Q -T floatme
for_window [title="^floatme$"] floating enable

# ======================= speaker stuff =================================
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 2 +10%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 2 -10%

bindsym XF86Sleep exec i3lock -i /home/viktor/.i3/big.png, exec sudo pm-suspend

#Power button - not working?
bindsym XF86PowerOff exec notify-send PowerButton

# Keyboard and language
# Use Alt + Shift to switch US / IS 
setxkbmap -option grp:switch,grp:alt_shift_toggle,grp_led:scroll us,is

# Switch keyboard mapping
bindsym $mod+o exec setxkbmap us
bindsym $mod+i exec setxkbmap is

# make caps lock work as escape key
exec --no-startup-id setxkbmap us
exec /usr/bin/setxkbmap -option "caps:escape"

bindsym $mod+p exec i3lock -i /home/viktor/.i3/big.png -c 212121
bindsym $mod+g move workspace to output left

#monitor Dual setup:
exec xrandr --output LVDS-1 --off --output DP-2 --off --output DP-1 --mode 1920x1080 --pos 0x0 --rotate normal --output HDMI-1 --off --output VGA-1 --mode 1600x1200 --pos 1920x0 --rotate normal
bindsym $mod+m exec xrandr --output LVDS-1 --off --output DP-2 --off --output DP-1 --mode 1920x1080 --pos 0x0 --rotate normal --output HDMI-1 --off --output VGA-1 --mode 1600x1200 --pos 1920x0 --rotate normal

#make program start floated
for_window [class="Pidgin"] floating enable, border normal
for_window [class="Nautilus"] floating enable, border normal

assign [class="Chromium"] 1:Chrome
assign [class="i3-sensible-terminal"] 2:Term
assign [class="Remmina"] 3:Remmina
assign [class="Firefox"] 4:Firefox
